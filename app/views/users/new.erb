<div class="register">
  <% if session[:user_id].nil? %>
<div id="new-user-form">
	<h3>Register</h3>

	<form id="new-user" action="/signup" method="POST">
    First Name: <input id="fname-field" type="text" name="user[first_name]" placeholder="Bobo" /><br>
    Last Name: <input id="lname-field" type="text" name="user[last_name]" placeholder="Link" /><br>
	  Email: <input id="email-field" type="email" name="user[email]" placeholder="tweettweet@dbc.com" /><br>
	  Password: <input id="password-field" type="password" name="user[password]" placeholder="********" /><br>
	  <input id="submit-btn" type="submit" value="Submit"/>
	</form>
</div>
<% else %>
LOGGED IN
<% end %>
</div>