<div class="container">
<h3><%= @user.first_name %>'s Collections</h3>
<ul id="collection_list">
  <% if @collections %>
    <% @collections.each do |collection| %>

      <li><h3><%= collection.name %></h3>

        <form method="GET" action="/collection/edit/<%= collection.id %>">
        <input id= "create" type="submit" value="Edit this collection">
        </form>

        <form id="delete" action="/collection/delete/<%=collection.id%>" method="POST">
        <input type="submit" value="Delete">
        </form>
        
      <% @cards.each do |card| %>
      <h5><li><%= card.species.common_name %></li></h5>
    <% end %>
      </li>
    <% end %>
  <% end %>




</div>